---
import { FooterLinks, SITE } from '@/config'
---

<footer class="w-full mt-16" style="background-color: #b3413e;">
    <div class="mx-auto w-full max-w-[85rem] px-4 py-12 sm:px-6 lg:px-16 2xl:max-w-screen-2xl">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 pb-8">
            
            <div class="footer-section md:col-span-2">
                <div class="flex items-center mb-4">
                    <h3 class="ww2-footer-title">
                        WW2 Bites
                    </h3>
                </div>
                <p class="ww2-footer-text mb-6">
                    Bringing you bite-sized historical insights and stories from World War II. Subscribe to our newsletter for weekly historical content.
                </p>
                <a 
                    href="/newsletter" 
                    class="ww2-footer-button"
                >
                    Subscribe Now
                </a>
            </div>

            <div class="footer-section">
                <h4 class="ww2-footer-subtitle">
                    Links
                </h4>
                <ul class="space-y-2">
                    <li>
                        <a href="/" class="ww2-footer-link">
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="/bites" class="ww2-footer-link">
                            Bites
                        </a>
                    </li>
                    <li>
                        <a href="/factions" class="ww2-footer-link">
                            Factions
                        </a>
                    </li>
                    <li>
                        <a href="/about" class="ww2-footer-link">
                            About
                        </a>
                    </li>
                </ul>
            </div>

            <div class="footer-section">
                <h4 class="ww2-footer-subtitle">
                    Legal
                </h4>
                <ul class="space-y-2">
                    <li>
                        <a href="/privacy" class="ww2-footer-link">
                            Privacy Policy
                        </a>
                    </li>
                    <li>
                        <a href="/cookies" class="ww2-footer-link">
                            Cookies
                        </a>
                    </li>
                    <li>
                        <a href="/terms" class="ww2-footer-link">
                            Terms of Service
                        </a>
                    </li>
                    <li>
                        <a href="/disclaimer" class="ww2-footer-link">
                            Disclaimer
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="border-t pt-6 text-center" style="border-color: rgba(230, 223, 209, 0.3);">
            <p class="ww2-footer-copyright">
                © <span id="current-year">2025</span> {SITE.title}. All rights reserved. | Historical content for educational purposes.
            </p>
        </div>
    </div>
</footer>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600&family=Oswald:wght@700&display=swap');
    
    /* ===== ESTILOS PROTEGIDOS DEL FOOTER ===== */
    
    /* Título principal WW2 Bites */
    .ww2-footer-title {
        font-family: 'Oswald', sans-serif !important;
        font-weight: 700 !important;
        font-size: 1.5rem !important;
        color: #ffffff !important;
        text-transform: uppercase !important;
        letter-spacing: 1px !important;
    }
    
    /* Subtítulos de sección */
    .ww2-footer-subtitle {
        font-family: 'Oswald', sans-serif !important;
        font-weight: 700 !important;
        font-size: 1.125rem !important;
        color: #ffffff !important;
        text-transform: uppercase !important;
        letter-spacing: 1px !important;
        margin-bottom: 1rem !important;
    }
    
    /* Texto descriptivo */
    .ww2-footer-text {
        font-family: 'Source Serif Pro', serif !important;
        font-size: 0.875rem !important;
        line-height: 1.6 !important;
        color: #e6dfd1 !important;
    }
    
    /* Enlaces */
    .ww2-footer-link {
        font-family: 'Source Serif Pro', serif !important;
        font-size: 0.875rem !important;
        color: #e6dfd1 !important;
        text-decoration: none !important;
        transition: color 0.3s ease !important;
        display: inline-flex !important;
    }
    
    .ww2-footer-link:hover {
        color: #ffffff !important;
    }
    
    /* Botón del footer */
    .ww2-footer-button {
        display: inline-block !important;
        padding: 0.75rem 1.5rem !important;
        font-family: 'Oswald', sans-serif !important;
        font-weight: 700 !important;
        font-size: 0.875rem !important;
        text-transform: uppercase !important;
        letter-spacing: 1px !important;
        color: #ffffff !important;
        background-color: transparent !important;
        border: 2px solid #ffffff !important;
        border-radius: 0.375rem !important;
        text-decoration: none !important;
        transition: all 0.3s ease !important;
    }
    
    .ww2-footer-button:hover {
        background-color: #ffffff !important;
        color: #b3413e !important;
    }
    
    /* Copyright */
    .ww2-footer-copyright {
        font-family: 'Source Serif Pro', serif !important;
        font-size: 0.875rem !important;
        color: #e6dfd1 !important;
    }
    
    /* Asegurar que el año actual se actualice */
    #current-year {
        font-weight: 600 !important;
        color: #e6dfd1 !important;
    }
    
    /* ===== RESPONSIVE PARA MÓVIL ===== */
    @media (max-width: 767px) {
        /* Título principal más grande en móvil */
        .ww2-footer-title {
            font-size: 2rem !important;
        }
        
        /* Subtítulos más grandes en móvil */
        .ww2-footer-subtitle {
            font-size: 1.25rem !important;
        }
        
        /* Texto descriptivo más grande en móvil */
        .ww2-footer-text {
            font-size: 1rem !important;
        }
        
        /* Enlaces más grandes en móvil */
        .ww2-footer-link {
            font-size: 1rem !important;
        }
        
        /* Botón más grande en móvil */
        .ww2-footer-button {
            font-size: 1rem !important;
            padding: 1rem 2rem !important;
        }
        
        /* Copyright mantiene su tamaño original en móvil */
    }
</style>

<script>
    // Actualizar el año actual
    document.addEventListener('DOMContentLoaded', function() {
        const yearElement = document.getElementById('current-year');
        if (yearElement) {
            yearElement.textContent = new Date().getFullYear().toString();
        }
    });
</script>
